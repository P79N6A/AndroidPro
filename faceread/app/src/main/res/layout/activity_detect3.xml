<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000c23">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="408dp"
        android:layout_height="55dp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/logo_ogmall"/>
    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="145dp"
        android:layout_height="146dp"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true">
        <com.baidu.aip.face.TexturePreviewView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/preview_view"/>
        <TextureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/texture_view"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/icon_topic"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/scan_bg"/>
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@mipmap/icon_scan"/>
    </RelativeLayout>

    <com.ogmall.faceread.widget.TextClockView
        android:id="@+id/text"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/relativeLayout"

        android:background="@mipmap/text_bg_ic"
        android:gravity="center"
        android:text="人脸识别"
        android:textColor="#BDECFD"
        android:textSize="15sp" />
<!--    <ImageView
        android:id="@+id/iv_zhishi"
        android:layout_width="287dp"
        android:layout_height="135dp"
        android:layout_below="@+id/tv_content"
        android:src="@mipmap/icon_zhishi"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@id/rl_scan"/>-->
    <com.ogmall.faceread.widget.TextClockView
        android:id="@id/tv_content"
        android:layout_width="408dp"
        android:layout_height="131dp"
        android:textColor="#BDECFD"
        android:textSize="18sp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:layout_alignLeft="@id/iv_logo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="57dp"
        android:layout_below="@id/iv_logo"
        android:background="@mipmap/icon_text_splsh"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/relativeLayout">
    <com.ogmall.faceread.widget.TextClockView
        android:id="@+id/tv_xingqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BDECFD"
        android:textSize="16sp"
        android:text="星期三"/>
    <com.ogmall.faceread.widget.TextClockView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_xingqi"
        android:textColor="#BDECFD"
        android:layout_alignLeft="@id/tv_xingqi"
        android:text="12/04"/>
    <View
        android:id="@+id/view_fen"
        android:layout_toRightOf="@id/tv_date"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#BDECFD"/>
    <com.ogmall.faceread.widget.TextClockView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#BDECFD"
        android:paddingTop="-10dp"
        android:gravity="left|top"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_fen"
        android:layout_marginRight="30dp"
        android:text="10:30"/>
    </RelativeLayout>
</RelativeLayout>
