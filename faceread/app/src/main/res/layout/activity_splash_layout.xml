<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_guide_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            app:layout_widthPercent="80%w"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_rectangle"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_paddingPercent="5%h">

            <EditText
                android:maxLength="6"
                android:id="@+id/et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/str_hint17"
                android:inputType="number"
                android:textColor="#00f0ff"
                android:textColorHint="#aaaaaa"
                app:layout_paddingBottomPercent="2%w"
                app:layout_paddingLeftPercent="5%w"
                app:layout_paddingRightPercent="5%w"
                app:layout_paddingTopPercent="2%h"
                app:layout_textSizePercent="5%w" />
            <EditText
                android:maxLength="1"
                android:id="@+id/et_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/str_hint18"
                android:inputType="number"
                android:textColor="#00f0ff"
                android:textColorHint="#aaaaaa"
                app:layout_paddingBottomPercent="2%w"
                app:layout_paddingLeftPercent="5%w"
                app:layout_paddingRightPercent="5%w"
                app:layout_paddingTopPercent="2%h"
                app:layout_textSizePercent="3%w" />


            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg3"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFFFF"
                app:layout_marginTopPercent="5%h"
                app:layout_paddingBottomPercent="1%h"
                app:layout_paddingLeftPercent="6%w"
                app:layout_paddingRightPercent="6%w"
                app:layout_paddingTopPercent="1%h"
                app:layout_textSizePercent="4.5%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>
