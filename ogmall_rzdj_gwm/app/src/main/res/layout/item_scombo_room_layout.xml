<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="148dp"
    android:background="#FFFFFF"
    android:layout_marginTop="7dp">
    <ImageView
        android:id="@+id/iv_headImg"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:layout_marginLeft="6dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_headImg"
        android:layout_alignTop="@id/iv_headImg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:singleLine="true"
        android:text="罗斯进口樟子木得套餐价套餐价..."
        android:textColor="#ff000000"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        android:textColor="#000000"
        android:text="X1"/>
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欧工编号：00000000"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_number"
        android:textColor="#B2B2B2"
        android:layout_marginTop="15dp"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/tv_guige"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="欧工编号：00000000"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_code"
        android:textColor="#B2B2B2"
        android:singleLine="true"

        android:layout_marginTop="4dp"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色：白色"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_guige"
        android:singleLine="true"
        android:textColor="#B2B2B2"
        android:layout_marginTop="4dp"
        android:textSize="11sp"/>
</RelativeLayout>
